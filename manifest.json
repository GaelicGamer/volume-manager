{
  "name": "Simple sound volume controller",
  "version": "1",
  "manifest_version": 2,
  "default_locale": "en",
  "homepage_url": "https://www.vadagon.com",
  "description": "Change sound volume on a fly with a simple click + volume booster",
  "permissions": [
    "tabCapture",
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_title": "Click to change the volume",
    "default_icon": "lvl1.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "commands": {
    "toggle-volume": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "windows": "Ctrl+Q"
      },
      "description": "Feature for changing volume around"
    }
  }
}
